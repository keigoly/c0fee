<div id="toppage_image">
	<% if I18n.locale == :ja %>
		<%= image_tag 'toppage_image.jpg' unless user_signed_in? %>
	<% else %>
		<%= image_tag 'toppage_image_en.jpg' unless user_signed_in? %>
	<% end %>
</div>

<div class="row">
  <div class="col s12">
    <ul class="tabs">
			<li class="tab col s12 l4"><a href="#recent_shops"><%= t('.recent_shops')%></a></li>
      <li class="tab col s12 l4"><a href="#recent_beans"><%= t('.recent_beans')%></a></li>
      <li class="tab col s12 l4"><a href="#recent_recipes"><%= t('.recent_recipes')%></a></li>
    </ul>
  </div>
	<div id="recent_shops" class="col s12"><%= render 'shops/shops', shops: @shops %><p class="col l12 left"><%= link_to t('.shop_index'),shops_path%></p></div>
  <div id="recent_beans" class="col s12"><%= render 'beans/beans', beans: @beans %><p class="col l12 left"><%= link_to t('.bean_index') ,beans_url%></p></div>
  <div id="recent_recipes" class="col s12"><%= render 'recipes/recipes', recipes: @recipes%><p class="col l12 left"><%= link_to t('.recipe_index'),recipes_path%></p></div>
</div>

<div class="fixed-action-btn">
  <a class="btn-floating btn-large red">
    <i class="large material-icons">mode_edit</i>
  </a>
  <ul>
    <li><%= link_to new_shop_path, class:"btn-floating red accent-3" do %><i class="material-icons white-text">store</i><% end %></li>
    <li><%= link_to shops_path, class:"btn-floating red accent-3" do %><i><%= image_tag 'white-bean.png', class: "material-icons", style:"margin-top: 8px"%></i><% end %></li>
    <li><%= link_to beans_path, class:"btn-floating red accent-3" do %><i class="material-icons white-text">import_contacts</i><% end %></li>
  </ul>
</div>
