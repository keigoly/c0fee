<% recipe_liked_counts(recipe) %>
	<% if current_user.like_recipe?(recipe) %>
		<%= link_to recipe_like_path(id: recipe.id),method: :delete,remote: true,class: "red-text" do%>
			<%= content_tag :i, "favorite", class: "small material-icons" %>
			<%= @count_recipe_likes %>
		<% end %>
	<% else %>
		<%= link_to recipe_likes_path(id: recipe.id),method: :post,remote: true,class: "red-text" do%>
			<%= content_tag :i, "favorite_border", class: "small material-icons  waves-effect waves-circle waves-red" %>
			<%= @count_recipe_likes %>
	<% end %>
<% end%>
